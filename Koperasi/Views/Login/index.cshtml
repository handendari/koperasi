@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_header_login.cshtml";
}


<head>
    <meta charset="UTF-8">
    <title>Login Form</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link href="~/Content/login/css/style.css" rel="stylesheet" type="text/css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>

</head>

<body>
    <div class="login">
        <h1>Login</h1>
        @using (Html.BeginForm())
        {         
            <div style="color: white"> @Html.ValidationSummary(true)   </div>
            <input id="txtUser" type="text" placeholder="Nomer Anggota" required="required" name="no_anggota" />
            <input id="txtPass" type="password" placeholder="Password" required="required" name="password" />
            <button id="btnSubmit" type="submit" class="btn btn-primary btn-block btn-large">Let me in.</button>  
        }
    </div>
</body>
